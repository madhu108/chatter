<% include ./partials/header %>
    <h2 class="goIn">Log In</h2>
    <form class="form-horizontal goInLine " action="/login" method="post">
        <div class="form-group">
            <label class="col-sm-2 col-sm-offset-3 control-label" for="userlogin">Username</label>
            <div class="col-sm-3">
                <input id="userlogin" class="form-control" type="text" name="username" placeholder="username">
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 col-sm-offset-3 control-label" for="loginpassword">Password</label>
            <div class="col-sm-3">
                <input id="loginpassword" class="form-control" type="password" name="password" placeholder="password">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-3 col-sm-offset-5">
                <button type="submit" class="btn btn-success btn-block">LogIn</button>
            </div>
        </div>
    </form>
    <% include ./partials/footer %>